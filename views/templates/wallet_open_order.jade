script(type="text/template", id="wallet-open-order-tpl")
  tr(class="<%= order.get('action') %>", data-id="<%= order.id %>")
    | <% if (order.get('action') === 'sell') { %>
    td.trade-date <a href="/trade/<%= order.get('sell_currency') %>/<%= order.get('buy_currency') %>"><%= order.get('sell_currency') %>/<%= order.get('buy_currency') %></a>
    | <% } else { %>
    td.trade-date <a href="/trade/<%= order.get('buy_currency') %>/<%= order.get('sell_currency') %>"><%= order.get('buy_currency') %>/<%= order.get('sell_currency') %></a>
    | <% } %>
    td.trade-type <%= order.getCreatedDate() %>
    td.trade-type <%= order.get('action') %>
    td.trade-price <%= _.str.satoshiRound(order.get('unit_price')) %>
    td.trade-amount <%= order.calculateFirstAmount() %>
    td.trade-total <%= order.calculateSecondAmount() %>
    td.trade-action <a href="#" class="action cancel" data-id="<%= order.id %>">Cancel</a>