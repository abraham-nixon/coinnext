script(type="text/template", id="site-closed-order-tpl")
  tr(class="<%= order.get('action') %>", data-id="<%= order.id %>")
    td.trade-date <%= order.get('created') %>
    td.trade-type <%= order.get('action') %>
    td.trade-price <%= order.get('unit_price') %>
    td.trade-amount <%= order.get('action') === 'sell' ? order.get('amount') : _.str.roundTo(order.get('amount') / order.get('unit_price'), 8) %>
    td.trade-amount <%= order.get('action') === 'sell' ?  order.get('amount') * order.get('unit_price') : order.get('amount') %>