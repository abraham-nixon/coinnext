script(type="text/template", id="coin-stats-tpl")
  table.trade-data
    tr.last-price
      th Last Price:
      td <%= _.str.satoshiRound(coinStats.last_price) %> <%= currency1 %> <span class="change <%= coinStats.growth ? 'up' : 'down' %>"><%= _.str.satoshiRound(coinStats.growth_ratio) %>%</span>
    tr.high-price
      th 24hr High:
      td <%= _.str.satoshiRound(coinStats.day_high) %> <%= currency1 %>
    tr.low-price
      th 24hr Low:
      td <%= _.str.satoshiRound(coinStats.day_low) %> <%= currency1 %>
    tr.volume
      th Volume:
      td <%= _.str.satoshiRound(coinStats.volume2) %> <%= currency2 %> / <%= _.str.satoshiRound(coinStats.volume1) %> <%= currency1 %>