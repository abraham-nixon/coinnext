script(type="text/template", id="open-order-tpl")
  tr(class="<%= order.get('action') %>", data-id="<%= order.id %>")
    td.trade-date <%= order.get('created') %>
    td.trade-type <%= order.get('action') %>
    td.trade-price <%= order.get('unit_price') %>
    td.trade-amount <%= order.get('action') === 'sell' ? order.get('amount') : _.str.roundToThree(order.get('amount') / order.get('unit_price')) %>
    td.trade-total <%= order.get('action') === 'sell' ?  order.get('amount') * order.get('unit_price') : order.get('amount') %>
    td.trade-action <a href="#" class="action cancel" data-id="<%= order.id %>">Cancel</a>