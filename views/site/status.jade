extends ../layout

block content
  #status.main-content.status(role='main')
    .wrapper
      .col-aside
        //- include status/_wallet_list

      .col-main#status-cnt
        #wallets.container
          .con-header
            h3.con-header-title Wallet Status
          table.trade-data
            tr
              th Status
              th Currency
              th Blocks
              th Connections
              th Last updated
            - each wallet in wallets
              tr.wallet(data-id="#{wallet._id}")
                td #{wallet.status}
                td #{wallet.currency}
                td #{wallet.blocks}
                td #{wallet.connections}
                td #{wallet.last_updated}
