extends ../../layout

block content
  .main-content.settings(role='main')
    .wrapper
      .col-aside
        include _funds_list
      .col-main
        #balance.container
          .con-header
            h3.con-header-title Bitcoin Balance
          table.trade-data
            tr
              th Total Balance
              td 51 BTC
            tr
              th Available Balance
              td 50 BTC

        // Deposit
        .wrap
          .two-col-wrap
            .transaction-con.container
              .con-header
                h3.con-header-title Deposit Bitcoin
              .con-body
                label To deposit bitcoins, send to this address:
                .coin-deposit-address
                  code 13ve5vXacXcvN2BbF1o5C4pWo7bJJC7qR9
                  button#show-qr-bt Show QR
                  button#copy-address(data-clipboard-text="#") Copy
                ul.terms
                  li Minimal deposit amount is 0.0001 BTC.
                  li Your deposit will be credited after 3 network confirmations.
          .two-col-wrap
            .transaction-con.container
              .con-header
                h3.con-header-title Withdraw Bitcoin
                .header-balance <a href="#" class="amount">0893892039 PPC</a> Available
              .con-body
                label Enter the amount you would like to withdraw:
                .currency-input
                  input(type="text", placeholder="Amount")
                  .overlay-amount BTC
                label Enter a bitcoin address:
                .address-input
                  input(type="text", placeholder="Bitcoin address")
                .confirm-order
                  button Withdraw
                ul.terms
                  li Minimal amount for withdrawal is 0.01 BTC.
                  li Fee for withdrawal is 0.001 BTC.
                  li Daily limit on withdrawal is 100 BTC.

        // Open Orders (All)
        #open-orders.container
          .con-header
            h3.con-header-title Open Orders
          table.trade-data
            thead
              tr
                th Market
                th Date
                th Type
                th Amount
                th Price
                th Total
                th Action
            tbody
              tr.sell
                td <a href="#">BTC/LTC</a>
                td.trade-date 18/12/13 05:31
                td.trade-type Sell
                td.trade-amount 2 BTC
                td.trade-price 1 LTC
                td.trade-total 2 LTC
                td.trade-action <a href="#">Cancel</a>

        // Order History
        #order-history.order-history.container
          .con-header
            h3.con-header-title Order History
          .table-wrap
            table.trade-data
              thead
                tr
                  th Market
                  th Date
                  th Type
                  th Amount
                  th Price
                  th Total
              tbody
                tr.sell
                  td BTC/LTC
                  td.trade-date 18/12/13 04:23
                  td.trade-type Sell
                  td.trade-amount 19.8594
                  td.trade-price 0.0046
                  td.trade-total 0.09135324