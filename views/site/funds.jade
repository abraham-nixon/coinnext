extends ../layout

block content
  #finances.main-content.finances(role='main')
    .wrapper
      .col-aside
        include funds/_funds_list

      .col-main#finances-cnt
        #wallets.container
          .con-header
            h3.con-header-title Balances
          table.trade-data
            tr
              th Currency
              th Balance
              th Available
              th On Hold
            - each wallet in wallets
              tr.wallet(data-id="#{wallet._id}")
                td
                  a(href="/funds/#{wallet.currency}") #{wallet.currency}
                td #{wallet.balance} #{wallet.currency}
                td #{wallet.balance} #{wallet.currency}
                td #{wallet.hold_balance} #{wallet.currency}

        // Open Orders (All)
        #open-orders.container
          .con-header
            h3.con-header-title Open Orders
          table.trade-data
            thead
              tr
                th Market
                th Date
                th Type
                th Price
                th Amount
                th Total
                th Action
            tbody#overview-open-orders-cnt

        // Order History
        #order-history.order-history.container
          .con-header
            h3.con-header-title Order History
          .table-wrap
            table.trade-data
              thead
                tr
                  th Market
                  th Date
                  th Type
                  th Price
                  th Amount
                  th Total
              tbody#overview-closed-orders-cnt

  include ../templates/wallet_open_order
  include ../templates/wallet_closed_order