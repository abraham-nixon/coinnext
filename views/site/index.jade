extends ../layout

block content
  .main-content(role='main')
    - if (!user)
      .hero-unit
        h1.tagline The Fast, Secure and Reliable<br /> Cryptocurrency Exchange
        a(href='/signup').cta Get Started Now
      #features
        .wrapper
          ul.feature-list
            li.feature-item
              img(src="/img/hero/coins.svg").feature-img
              .feature-text Wide range of Coins
            li.feature-item
              img(src="/img/hero/safe.svg").feature-img
              .feature-text Bank-Grade Security
            li.feature-item
              img(src="/img/hero/save.svg").feature-img
              .feature-text Low Fees
            li.feature-item
              img(src="/img/hero/support.svg").feature-img
              .feature-text Fast Support
    .wrapper
      .col-left
        include _market-ticker
      .col-right
        - if (user)
          - if (user.chat_enabled)
            include _chatbox
        - else
          include _chatbox
        // Twitter Widget
        <a class="twitter-timeline" href="https://twitter.com/coinnext" data-widget-id="416750665692487681" data-border-color="#dcdfe3">Tweets by @coinnext</a>
        <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+"://platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>

      .col-center
        include _warnings

        section#announcements.container
          .con-header
            h3.con-header-title Announcements
          ul.announcement-list
            li.announcement-item
              .time 24/12/13
              a(href="/announcements/1").title Bank holiday - December 25th, 26th
        section#market-list.container
          .con-header
            h3.con-header-title All Markets
          table.trade-data
            tr
              th Market
              th Coin Name
              th Last Price
              th Volume (24h)
              th % Change (24h)
            - each info, type in marketStats
              tr
                td <a href="/trade/#{type.replace("_", "/")}">#{type.replace("_", "/")}</a>
                td #{currencies[info.label]}
                td(class="rate #{info.growth_ratio >= 0 ? 'up' : 'down'}") #{info.getFloat('last_price')}
                td #{info.getFloat('volume1')} #{type.split("_")[0]}
                td #{info.growth_ratio * (info.growth_ratio < 0 ? -1 : 1)}
