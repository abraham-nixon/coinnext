                        td <span class="amount">0 #{wallet1.currency}</span>
                      tr.to-receive
                        th Approx. #{wallet2.currency} to receive:
                        td <span class="amount">0 #{wallet2.currency}</span>
                    .confirm-order
                      button Sell #{wallet1.currency}

