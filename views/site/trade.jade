extends ../layout

block content
  .main-content(role='main')
    .wrapper
      .col-left
        .market-ticker
          h2.market-ticker-header
            | Exchange / BTC
            a(href='').edit-ticker <i class='icon-list-ul'></i>
          ul.market-ticker-coins
            li.market-ticker-coin
              a(href='', title='Hide Exchange').hide-coin <i class='icon-hide'></i>
              .label LTC
              .rate 0.03509
              .move-coin <i class="icon-reorder"></i>
            li.market-ticker-coin.up
              a(href='', title='Hide Exchange').hide-coin <i class='icon-hide'></i>
              .label NMC
              .rate 0.00736
              .move-coin <i class="icon-reorder"></i>
            li.market-ticker-coin
              a(href='', title='Hide Exchange').hide-coin <i class='icon-hide'></i>
              .label NVC
              .rate 0.02085
              .move-coin <i class="icon-reorder"></i>
            li.market-ticker-coin.up.active
              a(href='', title='Hide Exchange').hide-coin <i class='icon-hide'></i>
              .label PPC
              .rate 0.00525
              .move-coin <i class="icon-reorder"></i>
            li.market-ticker-coin.down
              a(href='', title='Hide Exchange').hide-coin <i class='icon-hide'></i>
              .label FTC
              .rate 0.00054
              .move-coin <i class="icon-reorder"></i>
          .add-coin
            select
              option(val='') Display Exchange
              option(val='CL') CopperLark
              option(val='DVC') Devcoin
              option(val='MNC') MinCoin
      .col-right
        .coin-stats
          p.last-price Last Price: 0.00525 BTC <span class="change down">-4.81%</span>
          p Volume: 1392 PPC / 291 BTC
        .chatbox
          ul.message-list
            li.message
              <span class="sender">nanook</span>: Hey there, BUY!
            li.message
              <span class="sender">jason</span>: No man, all Sell!
            li.message
              <span class="sender">jason</span>: Hey there, BUjlmqjsdfklmqjsdflmjqslmfjqlsmdjflmqksjflmqjsdfklmjqslmdfjqlkmsjdflmjqslmdfjqsfklmjqlsmdfY!
          .message-post
            input(type="text", placeholder="Type here to chat...").chat-message-input
            button#send-message-bt Send

      .col-center
        h1.market-title <i class="coin-icon ppc"></i> <b>Peercoin</b> to <b>Bitcoin</b> Exchange
        .graph

        // Order Box
        #order-boxes.container
          .order-box-wrap
            #buy-box.order-box
              .order-box-header
                h3.order-box-title Buy PPC
                .order-box-balance <a href="#" class="amount">0 BTC</a> Available
              .order-box-body
                .market-type
                  label
                    input(type='radio', name='buy-type', checked)
                    i Market Order
                  label
                    input(type='radio', name='buy-type')
                    i Limit Order
                .market-order
                  label I want to Spend:
                  .wrap-amount
                    input(type="text")
                    .overlay-amount BTC
                  table.order-overview
                    tr.subtotal
                      th Total:
                      td <span class="amount">5 BTC</span>
                    tr.fee
                      th Fee:
                      td <span class="amount">0.002 BTC</span>
                    tr.to-receive
                      th Approx. PPC to receive:
                      td <span class="amount">0.11471265 PPC</span>
                  .confirm-order
                    button Buy PPC

          .order-box-wrap
            #sell-box.order-box
              .order-box-header
                h3.order-box-title Sell PPC
                .order-box-balance <a href="#" class="amount">0893892039 PPC</a> Available
              .order-box-body
