extends ../layout

block content

  .main-content.auth(role='main')
    .wrapper
      .auth-box
        h1 Reset Password
        - if (success)
          p Please check your email for thurfer instructions about how to change your password. Thank you.
        - else
          form#send-pass-form(action="/send-password", method="post")
            input(type="hidden", name="_csrf", value="#{csrfToken}")
            #error-cnt
              - if (errors)
                - each error in errors
                  - if (error === "wrong-user")
                    p.error Sorry, but we could not find a profile with the given email.
            .control-group
              .input-prepend
                span.add-on
                  i.icon-envelope
                input#change-pass-email(type="email", name="email", placeholder="Email", tabindex="1", autofocus)
            input#change-pass-btn(type="submit", value="Reset", tabindex="2")
