doctype html
html(lang='en')
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")

    title #{title ? title : 'Coinnext - Cryptocurrency Exchange'}
    
    meta(name='description', content='')
    meta(name='viewport', content='width=device-width, initial-scale=1')

    != css('main')
    != js('vendor/modernizr-2.7.1.min.js')

    script.
      CONFIG = {
        users: {
          hostname: "#{GLOBAL.appConfig().users.hostname}"
        },
        currentUser: {
          id: "#{user ? user.id : ''}"
        }
      }

  body
    include site/_header
    block content
    include site/_footer

    include templates/market_ticker
    include templates/chat_message

    script(src="/socket.io/socket.io.js")
    != js('application')
