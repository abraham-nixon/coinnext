doctype html
html(lang='en')
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")

    title #{title ? title : 'Administratie - Coinnext'}
    
    meta(name='description', content='')
    meta(name='viewport', content='width=device-width, initial-scale=1')

    != css('admin')

    script.
      CONFIG = {
        csrf: "#{csrfToken}",
        currencies: ["!{currencies ? currencies.join('", "') : ''}"]
      }

  body
    .sidebar
      .page-head
        a(href="/", title="Return to homepage").site-logo
          img(src="data:image/gif;base64,R0lGODlhAQABAIAAAP///wAAACH5BAEAAAAALAAAAAABAAEAAAICRAEAOw==", alt="Coinnext").coinnext-logo
      - if (user)
        ul.side-nav.nav
          li: a(href='/administratie', class=(page === 'stats' ? 'active' : '')) Stats
          

    .top-bar
      - if (user)
        .quick-search
          form#search-user-form
            input(type="text", placeholder="ID, email or deposit address", name="term")
            button#find-user-bt.btn(type="submit") Find
            a#search-user-result(target="_blank")

      - if (user)
        ul.user-nav.nav
          li: a(href="/administratie/logout") Logout
        p.current-user Logged in as #{user.email}
    
    .content
      block content

    != js('admin')
