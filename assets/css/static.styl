/* Terms */
.last-updated
  font-style italic
  background #fafbd2
  border-radius 2px
  display inline-block

h2
  font-size 15px
  margin 15px 0 5px
  font-weight 700

.page-title
  color $text-color
  font-family "Open Sans", helvetica, arial, sans-serif
  margin 0 0 10px 0
  font-size 24px
  font-weight 500

.content
  ol
  ul
    padding-left 20px
    margin 0 0 10px 0

#qr-gen-bt
  btn($teal)
  display inline-block

.settings
  .con-body
    padding 15px 10px

.appstore-badges
  font-size 0

.appstore
  background transparent url(CDN('/img/appstore-sprite.png')) no-repeat
  display inline-block
  width 143px
  height 42px
  overflow hidden
  text-indent -999px
  border-radius 3px
  border 1px solid #000
  margin-right 10px

.appstore-apple
  background #000 url(CDN('/img/appstore-sprite.png')) -1px -1px no-repeat

.appstore-google
  background #000 url(CDN('/img/appstore-sprite.png')) -155px -1px no-repeat

#username-update-form
  label
    margin-right 10px
  input
    width 250px

.content
  .profile-group
    reset-list()
    clearfix()

.profile
  width 400px
  margin 10px 40px 15px 0
  float left
  .portrait
    border-radius 2px
    overflow hidden
    float left
    margin 0 15px 0 0
  h3
    margin 0 0 3px 0
    font-size 16px
  h4
    margin 0 0 5px 0
    text-transform uppercase
    color $lightgray
    font-weight 400