.auth-wrap
  clearfix()
  width 680px
  margin 0 auto
  .auth-box
  .auth-features-box
    float left

.auth-features-box
  width 380px
  padding 10px
  ul
    reset-list()
  i
    font-size 24px
    float left
    margin 5px 10px 0 0

  h2
    margin 0 0 5px 0

  h2
  p 
    margin-left 40px
  p
    color $lightgray

.auth-box
  @extend .container
  background #fff
  width 300px
  margin 0 auto
  padding 10px
  h1
    font-size 20px
    background linear-gradient(#fafafa, $con-header-bg)
    border-bottom 1px solid $border-color
    box-shadow inset 0 1px 0 #fff
    text-align center
    margin -10px -10px 10px -10px
    line-height 1
    letter-spacing .3px
    color #13294e
    font-weight 500
    padding 15px 0
  input
    width 100%
  .control-group
    margin 10px auto 5px
    input
      border-radius 1px
      margin-bottom 5px
      
  input[type="submit"]
    btn($teal)
    
    padding 12px
  #error-cnt
  .error
    color #da4444
    border-color #da4444
    font-size 13px
    margin 0 0 10px 0
    display block
  .terms
    font-size 11px
    color $lightgray
    margin 0
    text-align center
    margin-top 10px
    padding 0
  .msg
    text-align center
    margin 30px 0 20px 0
    color $darkblue

      
.auth .wrapper
  padding-top 80px
  padding-bottom 100px

.auth-links
  text-align center
  margin-top 20px
  a
    font-size 14px

.input-prepend
  display inline-block
  width 100%
  position relative
  .add-on
    position absolute
    line-height 38px
    top 0px
    left 10px
    color #a9a9a9
    z-index 999
  input
    padding-left 30px
 