$red = #da4444

/* Market Tickers */
.market-ticker
  @extends .container
  &.edit-on
    color #999
    .market-ticker-header
      background #fff
      .edit-ticker
        color inherit
    .rate
      display none
    .hide-coin
    .show-coin
    .move-coin
    .add-coin
      display block

  .edit-ticker
    float right
    font-size 15px
    color #999
    &:hover
      color $blue
      text-decoration none   

  a
    display block
    clearfix()
    height 29px
    padding 6px
    margin 3px

.market-ticker-coins
  ul
    reset-list()

.add-coin
  display none
  padding 10px
  background #f9f9f9
  border-top 1px dotted #ecedef
  select
    width 100%
.market-ticker-coin
  clearfix()
  border-bottom 1px solid #ecedef
  border-top 1px solid #ecedef
  cursor pointer
  margin-bottom -1px
  margin-top -1px
  &.active
    a
      color #fff
      border-radius 1px
      border 0
      background $blue
      font-weight bold
      .rate
      &:hover
        color #fff !important
  &:hover
    color $blue
  &.up
    .rate
      color $teal
      transition color .3s ease-out
      &:after
        display inline-block
        content ""
        vertical-align middle
        width 0
        height 0
        margin-left 3px
        border-style solid
        border-width 0 5px 5px 5px
        border-color transparent transparent $teal transparent
  &.down
    .rate
      color $red
      transition color .3s ease-out
      &:after
        display inline-block
        content ""
        vertical-align middle
        width 0
        height 0
        margin-left 3px
        border-style solid
        border-width: 5px 5px 0 5px
        border-color: $red transparent transparent transparent
  .hide-coin
  .move-coin
    display none
  .hide-coin
    color #da4444
    margin-right 5px
    i
      vertical-align -1px
    &:hover
      text-decoration none
  .hide-coin
  .label
    float left
  .move-coin
    cursor ns-resize
    float right
    margin-left 5px
    i
      vertical-align middle
  .rate
    float right

/* Center */
.abbreviation
  border-right 1px solid #e0e0e0
  display inline-block
  padding 10px
  margin -10px
  margin-right 10px

.coin-stats
  @extends .container
  background #f9f9f9
  .last-price
    font-weight bold
  .up
    color #72b54c
  .down
    color #da4444

.graph
  width 100%
  height 300px

/* Order Boxes */
.two-col-wrap
  width 50%
  float left
  &:first-child > div
    margin-right 10px

.order-box
  @extends .container
  min-height 287px
  .currency-input
    width 100%
    margin-bottom 10px

.amount
  font-weight bold

.header-balance
  float right

.market-title
  @extends .con-header
  padding 10px
  margin 0 0 10px 0
  font-size 16px
  line-height 16px
  font-weight 500

.market-type
  clearfix()
  border-bottom 1px solid #ecedef
  label
    padding 10px
    width 50%
    display block
    float left
    &:first-child
      border-right 1px solid #ecedef
  input[type="radio"]
    margin-right 5px
  i
    font-style normal
    cursor pointer
    &:hover
      color $blue

.market-order
.limit-order
  padding 10px
  label
    margin-bottom 5px
    display block
.confirm-order
  button
    btn($teal)
    width 100%
    padding 0
    height 30px
    line-height 30px

.order-overview
  width 100%
  margin-bottom 10px
  font-size 13px
  th
    padding 7px 5px
    font-weight normal
  td
    padding 7px 5px
  .subtotal
  .to-receive
    background #f9f9f9
  .to-receive
    padding 8px 5px
    font-size 14px
    th
      font-weight bold

.overlay-amount
  position absolute
  line-height 28px
  top 0
  right 10px
  height 20px
  color #808080
  z-index 2

// TEMP
#sell-box .limit-order, #buy-box .limit-order
  display none

/* Order Book */
.order-book-wrap
  width 50%
  float left
  &:first-child
    .order-book
      margin-right 10px

.order-book
  @extends .container
  max-height 500px

.trade-history
  max-height 500px
  
.order-book-total
  float right
  color #999
  line-height 16px
  margin 0
  font-style italic

.table-wrap
  overflow-y auto
  overflow-x hidden
  max-height 440px

.trade-data
  width 100%
  border-spacing 1px
  border-collapse separate
  th
  td
    padding 6px 10px
  .wall
    font-weight bold
  tr:nth-child(even)
    background-color #f9f9f9
  tr.highlight
    background-color $blue
    td
      font-weight bold
  .buy
    .trade-type
    .trade-amount
      color $teal
  .sell
    .trade-type
    .trade-amount
      color $red

  .action
    background #fff
    color inherit
    border-radius 3px
    box-sizing border-box
    padding 2px 5px
    text-transform uppercase
    border 1px solid $border-color
    font-size 12px
    margin 0
    transition all .1s linear
    &:hover
      color $blue
      text-decoration none
      border-color $blue
    &:active
      color $darkblue
    &.cancel
      &:hover
        color $red
        border-color $red

@media screen and (max-width: 800px)
  .two-col-wrap
    width 100%
  .two-col-wrap:first-child > div
    margin 0 0 10px 0
