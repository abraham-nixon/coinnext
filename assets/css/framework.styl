*
  box-sizing border-box

input[type="text"]
input[type="email"]
input[type="password"]
input[type="number"]
input[type="url"]
  border 1px solid #ddd
  font-size 14px
  padding 10px
  background #fff
  border-radius 2px
  margin-top -1px
  position relative
  transition all .1s linear
  &:focus
    border-color $blue
    z-index 1

input[type="submit"]
  user-select none

input[readonly]
  cursor not-allowed

input
button:focus
  outline none

.hidden
  display none

reset-list()
  list-style none
  padding 0
  margin 0

btn(color)
  color #fff
  border-radius 1px
  background color
  padding 10px 20px
  border 0
  user-select none
  transition all .1s linear
  &:hover
    color #fff
    background darken(color, 30%)

a
  text-decoration none
  color $blue
  transition color .1s linear
  &:hover
    text-decoration underline

p
  margin-top 0
  padding 0
  margin-bottom 20px

.wrapper
  max-width 1600px
  margin 0 auto
  padding 0 15px

.wrap
  clearfix()

.container
  clearfix()
  position relative
  margin-bottom 10px
  background #fff
  border 1px solid $border-color
  overflow hidden
  border-radius 3px

.con-header
  clearfix()
  background #f6f7f8
  padding 10px
  border-bottom 1px solid #ecedef

.con-header-title
  margin 0
  color $darkblue
  display inline
  text-shadow 0 1px 0 #fff
  font-size 16px
  line-height 16px
  font-weight 700

.con-body
  padding 10px

.currency-input
  position relative
  display inline-block

.currency-input
.address-input
  input
    width 100%
    z-index 1
    height 30px
    position relative
    background #fff

/* Dropdown */
.dropdown
  position relative
  .dropdown-toggle
    &:hover
      .caret
        border-top-color inherit
    .caret
      margin-left 5px
  .dropdown-menu
    reset-list()
    transition opacity .2s ease-out
    background #fff
    border 1px solid #e0e5e8
    box-shadow 0 1px 3px rgba(#000,.05)
    border-top 0
    font-size 14px
    position absolute
    top 49px
    opacity 0
    left -9999px
    width 180px
    z-index 0
    right 0
    a
      padding 12px
      display block
      border-top 1px solid #ecedef
      font-weight 500
      color #999
      font-size 12px
      text-transform uppercase
      &:hover
        color $blue
        text-decoration none
      &:active
        color #14294e
      
  &:hover
    .dropdown-toggle
      color $blue
      .caret
        border-top-color inherit
    .active
      color $darkblue
    .dropdown-menu
      margin 0
      left auto
      opacity 1
      z-index 99

.caret
  display inline-block
  width 0
  height 0
  border 4px solid transparent
  border-top-color #999
  content ""

/* Sub Nav */
.sub-nav
  reset-list()
  border 1px solid $border-color
  border-radius 3px
  background #fff
  li
    border-bottom 1px solid #ecedef
    position relative
    &:last-child
      border 0
    &.active a
      color #fff
      border-radius 3px
      color $darkblue
      font-weight 500
      &:hover
        color $darkblue
    &.active
      &:before
        content ""
        border-top 9px solid transparent
        border-right 9px solid $border-color
        border-bottom 9px solid transparent
        display inline-block
        top 50%
        margin-top -9px
        position absolute
        vertical-align top
        right -1px
      &:after
        content ""
        border-top 8px solid transparent
        border-right 8px solid $bgcolor
        border-bottom 8px solid transparent
        display inline-block
        top 50%
        margin-top -8px
        position absolute
        vertical-align top
        right -1px
    a
      padding 10px
      display block
      font-weight 500
      color #999
      font-size 12px
      text-transform uppercase
      &:hover
        color $blue
        text-decoration none
      &:active
        color #14294e


/* Table */
th
  text-align left
