.wallets
  reset-list()

.add-wallet
  border-top 1px solid #e0e5e8
  background #f9f9f9
  padding 10px
  button
    margin-left 5px

.wallet
  .coin-deposit
    display none

  .withdraw-cnt
    display none

.fund-nav
  reset-list()
  li
    border-bottom 1px solid #ecedef
    cursor pointer
    height 38px
    margin-top -1px
    &:last-child
      border-bottom 0
    &.active
      background $blue
      border 0
      font-weight bold
      a
        color #fff
        &:hover
          color #fff !important
    a
      clearfix()
      padding 10px
      display block
      color #5f6a7d
      text-transform uppercase
      &:hover
        color $blue
        text-decoration none
      &:active
        color #14294e
      .label
        float left
      .balance
        float right
      &.con-header-title
        padding 0
        text-transform none
        color $darkblue
        &:hover
          color $blue
          text-decoration none