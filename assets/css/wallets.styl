.wallets
  reset-list()

.add-wallet
  border-top 1px dotted #e0e5e8
  background #f9f9f9
  padding 10px
  select
    width 77%
  button
    margin-left 3%
    width 20%
    color inherit
    background #fff
    height 25px
    line-height 25px
    border-radius 3px
    padding 0 5px
    text-transform uppercase
    border 1px solid $border-color
    font-size 12px
    transition all .1s linear
    &:hover
      color $teal
      border-color $teal
    &:active
      color #14294e

.fund-nav
  reset-list()
  li
    border-bottom 1px solid #ecedef
    border-top 1px solid #ecedef
    cursor pointer
    height 38px
    margin-bottom -1px
    &.active
      margin 4px 3px
      border-radius 1px
      background $blue
      border 0
      font-weight bold
      a
        color #fff
        &:hover
          color #fff
    a
      clearfix()
      padding 10px
      display block
      color inherit
      &:hover
        color $blue
        text-decoration none
      &:active
        color #14294e
      .label
        float left
      .balance
        float right

#balance
  th
    width 200px

.transaction-con
  min-height 280px
  label
    margin-bottom 5px
    display block
  .confirm-order
    margin-top 10px
  .terms
    reset-list()
    margin-top 5px
    text-align center
    color #999
    margin 10px -10px -10px -10px
    padding 10px
    border-top 1px solid #ecedef
    li
      margin-top 3px
      &:first-child
        margin 0

  .currency-input
  .address-input
    width 100%
    margin-bottom 5px

.coin-deposit-address
  border 1px solid #e9eaed
  box-sizing border-box
  border-radius 3px
  background #fcfce6
  word-wrap break-word
  clearfix()
  code
    float left
    height 30px
    font-size 12px
    padding 0 10px
    margin-right 1%
    line-height 28px
    font-weight bold

.coin-deposit-actions
  white-space nowrap
  float right
  button
    float right
    white-space nowrap
    margin 3px
    background #fff
    height 24px
    line-height 24px
    color inherit
    border-radius 3px
    box-sizing border-box
    padding 0 8px
    text-transform uppercase
    border 1px solid $border-color
    font-size 12px
    transition all .1s linear
    &:hover
    &.zeroclipboard-is-hover
      color $blue
      border-color $blue
    &:active
      color $darkblue
    &:last-child
      margin-right 0

.qr-address
  text-align center
  width 100px
  margin 10px auto
  img
    height 100px
    width 100px

.add .trade-amount
  color $teal
.distract .trade-amount
  color $red
