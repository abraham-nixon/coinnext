.wallets
  reset-list()

.add-wallet
  @extends .container
  background #f9f9f9
  padding 10px
  .last-price
    font-weight bold
    color $darkblue
  .up
    color #72b54c
  .down
    color #da4444

.wallet
  @extends .container

  .coin-info
    float left
    padding 10px

  .coin-total
    float left
    clear both
  .coin-address
    float left
    clear both
  .show-qr-address, .qr-address
    float left
    clear both
  .coin-name
    font-weight bold
    width 50px

  .coin-actions
    float right
    button
      color #fff
      background darken(#8BC26C, 15%)
      height 25px
      line-height 25px
      border-radius 1px
      text-transform uppercase
      margin 0 0 0 5px
      padding 0 20px
      border 0
      font-size 12px
      transition all .1s linear
      &:hover
        color #fff
        background darken(#8BC26C, 30%)
      &.white
        background transparent
        color #999
        border 1px solid #ecedef
        line-height 23px
        &:hover
          color $blue
          border-color $blue
        &:active
          color #14294e

  .withdraw-cnt
    border-top 1px solid #ecedef
    display none
    clear both
    padding 10px
    background #f9f9f9
    clearfix()
    .amount-field
    .address-field
      float left
      label
        display block
        margin-bottom 5px
    .address-field
      margin-left 5px
    .currency-input
      width 200px
    .address-input
      height 30px
      width 250px
    .submit
      float left
      color #fff
      background #72b54c
      height 30px
      line-height 30px
      border-radius 1px
      text-transform uppercase
      margin 20px 0 0 5px
      padding 0 20px
      border 1px solid #72b54c
      font-size 12px
      transition all .1s linear
      &:hover
        color #fff
        background darken(#8BC26C, 30%)

